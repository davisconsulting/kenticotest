@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc
@using DancingGoat.Models.InlineEditors.SiteSelector
@model SiteSelectorModel

@using (Html.Kentico().BeginInlineEditor("site-selector", Model.PropertyName))
{
    if(Model.Types.Count == 0)
    {
        <span><b>Error</b> - No sites found</span>
       
    }
    else
    {
        <b>Sites:</b><br/>
        @Html.DropDownList("selector-drop-down", Model.Types)
    }
}